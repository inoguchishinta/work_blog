<h1>Listing Articles</h1>

<section>
  <p>Our blog has <%= Article.public_count %> articles and counting!</p>
</section>

<section>
  <table>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3">operation</th>
    </tr>

  <% @articles.each do |article| %>

  <% unless article.archived? %> 
      <tr>
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td class="button"><%= link_to 'Show', article_path(article), {class: 'color-blue'}%></td>
        <td class="button"><%= link_to 'Edit', edit_article_path(article), {class: 'color-blue'}%></td>
        <td class="button"><%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: 'color-blue' %></td>
      </tr>
  <% end %> 
  <% end %>
  </table>
</section>
<section>
  <div class="new-btn">
    <%= link_to 'New article', new_article_path, {class: 'color-blue'}%>
  </div>
</section>