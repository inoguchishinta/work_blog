<div class="form-header color-header-back text-white d-flex align-items-center justify-content-right">
  <h1>Listing Articles</h1>
</div>

<section>
  <p>Our blog has <%= Article.public_count %> articles and counting!</p>
</section>

<section>
  <table class="color-white">
    <tr class="color-table-head text-white">
      <th>Id</th>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3">operation</th>
    </tr>

  <% @articles.each do |article| %>

  <% unless article.archived? %> 
      <tr>
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td class="button"><%= link_to 'Show', article_path(article), {class: 'color-blue text-white btn'}%></td>
        <td class="button"><%= link_to 'Edit', edit_article_path(article), {class: 'color-blue text-white btn'}%></td>
        <td class="button"><%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: 'color-blue text-white btn' %></td>
      </tr>
  <% end %> 
  <% end %>
  </table>
</section>
<section>
  <div class="new-btn">
    <%= link_to 'New article', new_article_path, {class: 'color-blue text-white input-new btn'}%>
  </div>
</section>