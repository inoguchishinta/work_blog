<%= form_with(model: @article, local: true,) do |form| %>
  <% if @article.errors.any? %>
    <div class="error-message text-red mt-md">
      <h2><%= pluralize(@article.errors.count, "error",) %> prohibited this article from being saved:</h2>
      <ul class="error-ul">
      <% @article.errors.full_messages.each do |msg| %>
        <li class="error-li"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-scope">
    <p class="text-black from-input-scope">
      <%= form.label :title , class: "fw-bold my-sm text-left" %>
      <%= form.text_field :title , class: "m-auto w-100" %>
    </p>

    <p class="text-black from-input-scope">
      <%= form.label :text , class: "fw-bold my-sm text-left" %>
      <%= form.text_area :text , class: "m-auto w-100" %>
    </p>

    <div class="my-md">
      <%= form.label :status , class: "fw-bold form-select-btn" %><br>
      <%= form.select :status, ['public', 'private', 'archived'], selected: 'public'  , class: "m-auto w-100"  %>
    </div>
    <section>
      <div class="create-btn my-xl">
        <p>
          <%= form.submit "Create Article", class: "color-blue text-white" %>
        </p>
      </div>
    </section>
  </div>
<% end %>
